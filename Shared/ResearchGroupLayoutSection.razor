@if (!IsInitialized)
{
    <div class="alert alert-info">
        <h4>Ομάδα Έρευνας - Φόρτωση...</h4>
        <p>Η ενότητα ομάδων έρευνας φορτώνει. Παρακαλώ περιμένετε.</p>
    </div>
}
else if (!IsRegistered)
{
    <div class="card mt-4">
        <div class="card-header bg-warning text-white">
            <h4 class="mb-0">Εγγραφή Ομάδας Έρευνας</h4>
        </div>
        <div class="card-body">
            <p class="card-text">Δεν έχετε εγγραφεί ως ομάδα έρευνας. Παρακαλώ εγγραφείτε για να αποκτήσετε πρόσβαση στις λειτουργίες.</p>
            <button class="btn btn-primary" @onclick="() => SetRegistered(true)">Εγγραφή ως Ομάδα Έρευνας</button>
        </div>
    </div>
}
else
{
    <div class="d-flex justify-content-between align-items-center mb-3">
        <h3>Ομάδα Έρευνας</h3>
        <button class="btn btn-secondary" @onclick="() => SetRegistered(false)">Απεγγραφή</button>
    </div>

    <ul class="nav nav-tabs" id="researchGroupTabs" role="tablist">
        <li class="nav-item">
            <a class="nav-link active" id="research-announcements-tab" data-bs-toggle="tab" href="#research-announcements" role="tab" aria-controls="research-announcements" aria-selected="true">Ανακοινώσεις</a>
        </li>
        <li class="nav-item">
            <a class="nav-link" id="research-projects-tab" data-bs-toggle="tab" href="#research-projects" role="tab" aria-controls="research-projects" aria-selected="false">Ερευνητικά Έργα</a>
        </li>
        <li class="nav-item">
            <a class="nav-link" id="research-publications-tab" data-bs-toggle="tab" href="#research-publications" role="tab" aria-controls="research-publications" aria-selected="false">Δημοσιεύσεις</a>
        </li>
        <li class="nav-item">
            <a class="nav-link" id="research-patents-tab" data-bs-toggle="tab" href="#research-patents" role="tab" aria-controls="research-patents" aria-selected="false">Διπλώματα Ευρεσιτεχνίας</a>
        </li>
        <li class="nav-item">
            <a class="nav-link" id="research-members-tab" data-bs-toggle="tab" href="#research-members" role="tab" aria-controls="research-members" aria-selected="false">Μέλη</a>
        </li>
        <li class="nav-item">
            <a class="nav-link" id="research-events-tab" data-bs-toggle="tab" href="#research-events" role="tab" aria-controls="research-events" aria-selected="false">Εκδηλώσεις</a>
        </li>
    </ul>
    <div class="tab-content" id="researchGroupTabsContent">
        <div class="tab-pane fade show active" id="research-announcements" role="tabpanel" aria-labelledby="research-announcements-tab">
            <div class="d-flex justify-content-between align-items-center mb-3">
                <h4 class="mt-3">Ανακοινώσεις Ομάδων Έρευνας</h4>
                <button class="btn btn-primary btn-sm" @onclick="ShowAnnouncementForm">
                    <i class="oi oi-plus"></i> Νέα Ανακοίνωση
                </button>
            </div>
            
            @if (showAnnouncementForm)
            {
                <div class="card mb-4">
                    <div class="card-header">
                        <h5>Δημιουργία Νέας Ανακοίνωσης</h5>
                    </div>
                    <div class="card-body">
                        <div class="mb-3">
                            <label for="announcementTitle" class="form-label">Τίτλος Ανακοίνωσης</label>
                            <input type="text" class="form-control" id="announcementTitle" @bind="newAnnouncementTitle" placeholder="Εισάγετε τον τίτλο της ανακοίνωσης">
                        </div>
                        <div class="mb-3">
                            <label for="announcementContent" class="form-label">Περιεχόμενο</label>
                            <textarea class="form-control" id="announcementContent" rows="4" @bind="newAnnouncementContent" placeholder="Εισάγετε το περιεχόμενο της ανακοίνωσης"></textarea>
                        </div>
                        <div class="d-flex gap-2">
                            <button class="btn btn-success" @onclick="CreateAnnouncement">
                                <i class="oi oi-check"></i> Δημοσίευση
                            </button>
                            <button class="btn btn-secondary" @onclick="CancelAnnouncementForm">
                                <i class="oi oi-x"></i> Ακύρωση
                            </button>
                        </div>
                    </div>
                </div>
            }
            
            <div class="row">
                <div class="col-md-6">
                    <div class="card">
                        <div class="card-header bg-info text-white">
                            <h6 class="mb-0">Ενεργές Ανακοινώσεις</h6>
                        </div>
                        <div class="card-body">
                            <p class="text-muted">Δεν υπάρχουν ενεργές ανακοινώσεις.</p>
                        </div>
                    </div>
                </div>
                <div class="col-md-6">
                    <div class="card">
                        <div class="card-header bg-secondary text-white">
                            <h6 class="mb-0">Στατιστικά</h6>
                        </div>
                        <div class="card-body">
                            <div class="row text-center">
                                <div class="col-4">
                                    <h5 class="text-primary">0</h5>
                                    <small>Ενεργές</small>
                                </div>
                                <div class="col-4">
                                    <h5 class="text-success">0</h5>
                                    <small>Δημοσιευμένες</small>
                                </div>
                                <div class="col-4">
                                    <h5 class="text-warning">0</h5>
                                    <small>Σε αναμονή</small>
                                </div>
                            </div>
                        </div>
                    </div>
                </div>
            </div>
        </div>
        
        <div class="tab-pane fade" id="research-projects" role="tabpanel" aria-labelledby="research-projects-tab">
            <div class="d-flex justify-content-between align-items-center mb-3">
                <h4 class="mt-3">Ερευνητικά Έργα</h4>
                <button class="btn btn-primary btn-sm" @onclick="ShowProjectForm">
                    <i class="oi oi-plus"></i> Νέο Έργο
                </button>
            </div>
            
            @if (showProjectForm)
            {
                <div class="card mb-4">
                    <div class="card-header">
                        <h5>Δημιουργία Νέου Ερευνητικού Έργου</h5>
                    </div>
                    <div class="card-body">
                        <div class="row">
                            <div class="col-md-6">
                                <div class="mb-3">
                                    <label for="projectTitle" class="form-label">Τίτλος Έργου</label>
                                    <input type="text" class="form-control" id="projectTitle" @bind="newProjectTitle" placeholder="Εισάγετε τον τίτλο του έργου">
                                </div>
                            </div>
                            <div class="col-md-6">
                                <div class="mb-3">
                                    <label for="projectStatus" class="form-label">Κατάσταση</label>
                                    <select class="form-select" id="projectStatus" @bind="newProjectStatus">
                                        <option value="active">Ενεργό</option>
                                        <option value="completed">Ολοκληρωμένο</option>
                                        <option value="pending">Σε αναμονή</option>
                                    </select>
                                </div>
                            </div>
                        </div>
                        <div class="mb-3">
                            <label for="projectDescription" class="form-label">Περιγραφή Έργου</label>
                            <textarea class="form-control" id="projectDescription" rows="3" @bind="newProjectDescription" placeholder="Εισάγετε την περιγραφή του έργου"></textarea>
                        </div>
                        <div class="d-flex gap-2">
                            <button class="btn btn-success" @onclick="CreateProject">
                                <i class="oi oi-check"></i> Δημιουργία
                            </button>
                            <button class="btn btn-secondary" @onclick="CancelProjectForm">
                                <i class="oi oi-x"></i> Ακύρωση
                            </button>
                        </div>
                    </div>
                </div>
            }
            
            <div class="row">
                <div class="col-md-4">
                    <div class="card border-primary">
                        <div class="card-header bg-primary text-white">
                            <h6 class="mb-0">Ενεργά Έργα</h6>
                        </div>
                        <div class="card-body">
                            <p class="text-muted">Δεν υπάρχουν ενεργά έργα.</p>
                        </div>
                    </div>
                </div>
                <div class="col-md-4">
                    <div class="card border-success">
                        <div class="card-header bg-success text-white">
                            <h6 class="mb-0">Ολοκληρωμένα</h6>
                        </div>
                        <div class="card-body">
                            <p class="text-muted">Δεν υπάρχουν ολοκληρωμένα έργα.</p>
                        </div>
                    </div>
                </div>
                <div class="col-md-4">
                    <div class="card border-warning">
                        <div class="card-header bg-warning text-white">
                            <h6 class="mb-0">Σε Αναμονή</h6>
                        </div>
                        <div class="card-body">
                            <p class="text-muted">Δεν υπάρχουν έργα σε αναμονή.</p>
                        </div>
                    </div>
                </div>
            </div>
        </div>
        
        <div class="tab-pane fade" id="research-publications" role="tabpanel" aria-labelledby="research-publications-tab">
            <div class="d-flex justify-content-between align-items-center mb-3">
                <h4 class="mt-3">Δημοσιεύσεις</h4>
                <button class="btn btn-primary btn-sm" @onclick="ShowPublicationForm">
                    <i class="oi oi-plus"></i> Νέα Δημοσίευση
                </button>
            </div>
            
            @if (showPublicationForm)
            {
                <div class="card mb-4">
                    <div class="card-header">
                        <h5>Προσθήκη Νέας Δημοσίευσης</h5>
                    </div>
                    <div class="card-body">
                        <div class="row">
                            <div class="col-md-8">
                                <div class="mb-3">
                                    <label for="publicationTitle" class="form-label">Τίτλος Δημοσίευσης</label>
                                    <input type="text" class="form-control" id="publicationTitle" @bind="newPublicationTitle" placeholder="Εισάγετε τον τίτλο της δημοσίευσης">
                                </div>
                            </div>
                            <div class="col-md-4">
                                <div class="mb-3">
                                    <label for="publicationYear" class="form-label">Έτος</label>
                                    <input type="number" class="form-control" id="publicationYear" @bind="newPublicationYear" placeholder="2024">
                                </div>
                            </div>
                        </div>
                        <div class="mb-3">
                            <label for="publicationAuthors" class="form-label">Συγγραφείς</label>
                            <input type="text" class="form-control" id="publicationAuthors" @bind="newPublicationAuthors" placeholder="Εισάγετε τους συγγραφείς">
                        </div>
                        <div class="mb-3">
                            <label for="publicationJournal" class="form-label">Επιστημονικό Περιοδικό</label>
                            <input type="text" class="form-control" id="publicationJournal" @bind="newPublicationJournal" placeholder="Εισάγετε το περιοδικό">
                        </div>
                        <div class="d-flex gap-2">
                            <button class="btn btn-success" @onclick="CreatePublication">
                                <i class="oi oi-check"></i> Προσθήκη
                            </button>
                            <button class="btn btn-secondary" @onclick="CancelPublicationForm">
                                <i class="oi oi-x"></i> Ακύρωση
                            </button>
                        </div>
                    </div>
                </div>
            }
            
            <div class="card">
                <div class="card-header">
                    <h6 class="mb-0">Κατάλογος Δημοσιεύσεων</h6>
                </div>
                <div class="card-body">
                    <p class="text-muted">Δεν υπάρχουν δημοσιεύσεις καταχωρημένες.</p>
                </div>
            </div>
        </div>
        
        <div class="tab-pane fade" id="research-patents" role="tabpanel" aria-labelledby="research-patents-tab">
            <div class="d-flex justify-content-between align-items-center mb-3">
                <h4 class="mt-3">Διπλώματα Ευρεσιτεχνίας</h4>
                <button class="btn btn-primary btn-sm" @onclick="ShowPatentForm">
                    <i class="oi oi-plus"></i> Νέο Δίπλωμα
                </button>
            </div>
            
            @if (showPatentForm)
            {
                <div class="card mb-4">
                    <div class="card-header">
                        <h5>Προσθήκη Νέου Διπλώματος Ευρεσιτεχνίας</h5>
                    </div>
                    <div class="card-body">
                        <div class="row">
                            <div class="col-md-6">
                                <div class="mb-3">
                                    <label for="patentTitle" class="form-label">Τίτλος Διπλώματος</label>
                                    <input type="text" class="form-control" id="patentTitle" @bind="newPatentTitle" placeholder="Εισάγετε τον τίτλο">
                                </div>
                            </div>
                            <div class="col-md-6">
                                <div class="mb-3">
                                    <label for="patentNumber" class="form-label">Αριθμός Διπλώματος</label>
                                    <input type="text" class="form-control" id="patentNumber" @bind="newPatentNumber" placeholder="Εισάγετε τον αριθμό">
                                </div>
                            </div>
                        </div>
                        <div class="mb-3">
                            <label for="patentDescription" class="form-label">Περιγραφή</label>
                            <textarea class="form-control" id="patentDescription" rows="3" @bind="newPatentDescription" placeholder="Εισάγετε την περιγραφή"></textarea>
                        </div>
                        <div class="d-flex gap-2">
                            <button class="btn btn-success" @onclick="CreatePatent">
                                <i class="oi oi-check"></i> Προσθήκη
                            </button>
                            <button class="btn btn-secondary" @onclick="CancelPatentForm">
                                <i class="oi oi-x"></i> Ακύρωση
                            </button>
                        </div>
                    </div>
                </div>
            }
            
            <div class="card">
                <div class="card-header">
                    <h6 class="mb-0">Κατάλογος Διπλωμάτων</h6>
                </div>
                <div class="card-body">
                    <p class="text-muted">Δεν υπάρχουν διπλώματα καταχωρημένα.</p>
                </div>
            </div>
        </div>
        
        <div class="tab-pane fade" id="research-members" role="tabpanel" aria-labelledby="research-members-tab">
            <div class="d-flex justify-content-between align-items-center mb-3">
                <h4 class="mt-3">Μέλη Ομάδας</h4>
                <button class="btn btn-primary btn-sm" @onclick="ShowMemberForm">
                    <i class="oi oi-plus"></i> Προσθήκη Μέλους
                </button>
            </div>
            
            @if (showMemberForm)
            {
                <div class="card mb-4">
                    <div class="card-header">
                        <h5>Προσθήκη Νέου Μέλους</h5>
                    </div>
                    <div class="card-body">
                        <div class="row">
                            <div class="col-md-6">
                                <div class="mb-3">
                                    <label for="memberName" class="form-label">Όνομα</label>
                                    <input type="text" class="form-control" id="memberName" @bind="newMemberName" placeholder="Εισάγετε το όνομα">
                                </div>
                            </div>
                            <div class="col-md-6">
                                <div class="mb-3">
                                    <label for="memberRole" class="form-label">Ρόλος</label>
                                    <select class="form-select" id="memberRole" @bind="newMemberRole">
                                        <option value="leader">Επικεφαλής</option>
                                        <option value="researcher">Ερευνητής</option>
                                        <option value="phd">Διδακτορικός</option>
                                        <option value="master">Μεταπτυχιακός</option>
                                        <option value="undergraduate">Προπτυχιακός</option>
                                    </select>
                                </div>
                            </div>
                        </div>
                        <div class="mb-3">
                            <label for="memberEmail" class="form-label">Email</label>
                            <input type="email" class="form-control" id="memberEmail" @bind="newMemberEmail" placeholder="Εισάγετε το email">
                        </div>
                        <div class="d-flex gap-2">
                            <button class="btn btn-success" @onclick="CreateMember">
                                <i class="oi oi-check"></i> Προσθήκη
                            </button>
                            <button class="btn btn-secondary" @onclick="CancelMemberForm">
                                <i class="oi oi-x"></i> Ακύρωση
                            </button>
                        </div>
                    </div>
                </div>
            }
            
            <div class="row">
                <div class="col-md-6">
                    <div class="card">
                        <div class="card-header bg-primary text-white">
                            <h6 class="mb-0">Επικεφαλής Ομάδας</h6>
                        </div>
                        <div class="card-body">
                            <p class="text-muted">Δεν έχει οριστεί επικεφαλής.</p>
                        </div>
                    </div>
                </div>
                <div class="col-md-6">
                    <div class="card">
                        <div class="card-header bg-info text-white">
                            <h6 class="mb-0">Ερευνητές</h6>
                        </div>
                        <div class="card-body">
                            <p class="text-muted">Δεν υπάρχουν ερευνητές καταχωρημένοι.</p>
                        </div>
                    </div>
                </div>
            </div>
        </div>
        
        <div class="tab-pane fade" id="research-events" role="tabpanel" aria-labelledby="research-events-tab">
            <div class="d-flex justify-content-between align-items-center mb-3">
                <h4 class="mt-3">Εκδηλώσεις</h4>
                <button class="btn btn-primary btn-sm" @onclick="ShowEventForm">
                    <i class="oi oi-plus"></i> Νέα Εκδήλωση
                </button>
            </div>
            
            @if (showEventForm)
            {
                <div class="card mb-4">
                    <div class="card-header">
                        <h5>Δημιουργία Νέας Εκδήλωσης</h5>
                    </div>
                    <div class="card-body">
                        <div class="row">
                            <div class="col-md-6">
                                <div class="mb-3">
                                    <label for="eventTitle" class="form-label">Τίτλος Εκδήλωσης</label>
                                    <input type="text" class="form-control" id="eventTitle" @bind="newEventTitle" placeholder="Εισάγετε τον τίτλο">
                                </div>
                            </div>
                            <div class="col-md-6">
                                <div class="mb-3">
                                    <label for="eventDate" class="form-label">Ημερομηνία</label>
                                    <input type="date" class="form-control" id="eventDate" @bind="newEventDate">
                                </div>
                            </div>
                        </div>
                        <div class="mb-3">
                            <label for="eventDescription" class="form-label">Περιγραφή</label>
                            <textarea class="form-control" id="eventDescription" rows="3" @bind="newEventDescription" placeholder="Εισάγετε την περιγραφή"></textarea>
                        </div>
                        <div class="d-flex gap-2">
                            <button class="btn btn-success" @onclick="CreateEvent">
                                <i class="oi oi-check"></i> Δημιουργία
                            </button>
                            <button class="btn btn-secondary" @onclick="CancelEventForm">
                                <i class="oi oi-x"></i> Ακύρωση
                            </button>
                        </div>
                    </div>
                </div>
            }
            
            <div class="row">
                <div class="col-md-6">
                    <div class="card border-success">
                        <div class="card-header bg-success text-white">
                            <h6 class="mb-0">Επερχόμενες Εκδηλώσεις</h6>
                        </div>
                        <div class="card-body">
                            <p class="text-muted">Δεν υπάρχουν επερχόμενες εκδηλώσεις.</p>
                        </div>
                    </div>
                </div>
                <div class="col-md-6">
                    <div class="card border-secondary">
                        <div class="card-header bg-secondary text-white">
                            <h6 class="mb-0">Παρελθούσες Εκδηλώσεις</h6>
                        </div>
                        <div class="card-body">
                            <p class="text-muted">Δεν υπάρχουν παρελθούσες εκδηλώσεις.</p>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>
}
