@* Test version of ResearchGroupLayoutSection to verify parameter binding *@

@if (!IsInitialized)
{
    <div class="alert alert-info">
        <h4>Research Group Section - Loading</h4>
        <p>IsInitialized: @IsInitialized</p>
        <p>IsRegistered: @IsRegistered</p>
    </div>
}
else if (!IsRegistered)
{
    <div class="alert alert-warning">
        <h4>Research Group Section - Not Registered</h4>
        <p>IsInitialized: @IsInitialized</p>
        <p>IsRegistered: @IsRegistered</p>
        <button class="btn btn-primary" @onclick="() => SetRegistered(true)">Register as Research Group</button>
    </div>
}
else
{
    <div class="alert alert-success">
        <h4>Research Group Section - Registered</h4>
        <p>IsInitialized: @IsInitialized</p>
        <p>IsRegistered: @IsRegistered</p>
        <button class="btn btn-secondary" @onclick="() => SetRegistered(false)">Unregister</button>
    </div>
}
